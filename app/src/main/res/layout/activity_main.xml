<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/tvFlashcardQuestion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="5dp"
        android:gravity="center"
        android:text="@string/question_text"
        android:textColor="@color/white"
        android:background="@drawable/card_question_background"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvFlashcardAnswer1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/tvFlashcardQuestion"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/blue_gray"
        android:elevation="5dp"
        android:gravity="center"
        android:text="@string/answer_clinton"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvFlashcardAnswer2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/tvFlashcardAnswer1"
        android:gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:textSize="40sp"
        android:text="@string/answer_bush"
        android:background="@color/blue_gray"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvFlashcardAnswer3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/tvFlashcardAnswer2"
        android:gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:textSize="40sp"
        android:text="@string/answer_obama"
        android:background="@color/blue_gray"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/ivAddBtn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/add_icon_foreground"
        android:contentDescription="@string/button_add" />

    <ImageView
        android:id="@+id/ivEditBtn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/edit_icon_foreground"
        android:contentDescription="@string/edit_button"/>
</RelativeLayout>