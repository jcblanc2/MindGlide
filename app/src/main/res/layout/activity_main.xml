<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvFlashcardQuestion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="@string/question_text"
        android:textSize="40sp"
        android:background="@drawable/card_question_background"
        android:textColor="@color/blue_gray"
        android:elevation="5dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tvAnswerClinton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvFlashcardQuestion"
        android:gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:text="@string/answer_clinton"
        android:textSize="40sp"
        android:background="@color/light_orange"
        android:textColor="@color/purple" />

    <TextView
        android:id="@+id/tvAnswerBush"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvAnswerClinton"
        android:gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:text="@string/answer_bush"
        android:textSize="40sp"
        android:background="@color/light_orange"
        android:textColor="@color/purple" />

    <TextView
        android:id="@+id/tvAnswerObama"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvAnswerBush"
        android:gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:text="@string/answer_obama"
        android:textSize="40sp"
        android:background="@color/light_orange"
        android:textColor="@color/purple" />

</RelativeLayout>